[Hotkey]
# 切换激活/非激活输入法
TriggerKey=CTRL_SPACE
# 额外的激活输入法快捷键
# Available Value:
# R_CTRL R_SHIFT L_SHIFT L_CTRL ALT_L_SHIFT ALT_R_SHIFT CTRL Both SHIFT Both Disabled
SwitchKey=ALT_R_SHIFT
# 激活输入法
ActivateKey=
# 取消激活输入法
InactivateKey=
# 启用输入法间切换
# Available Value:
# True False
IMSwitchKey=False
# 输入法切换键
# Available Value:
# CTRL_SHIFT ALT_SHIFT CTRL_SUPER ALT_SUPER
IMSwitchHotkey=
# 双击切换键时切换
# Available Value:
# True False
DoubleSwitchKey=False
# 输入间隔
TimeInterval=250
# 切换虚拟键盘
VKSwitchKey=
# 切换联想模式
RemindSwitchKey=
# 切换全角
FullWidthSwitchKey=
# 切换全角标点
PuncSwitchKey=
# 上一页
PrevPageKey=-
# 下一页
NextPageKey==
# 选择第二第三候选词
SecondThirdCandWordKey=
# 保存配置及输入历史
SaveAllKey=CTRL_ALT_S
# 切换嵌入预编辑字符串
SwitchPreedit=CTRL_ALT_P

[Program]
# Fcitx真正启动前延迟的秒数
DelayStart=0
# 在窗口间共享状态
# Available Value:
# No All PerProgram
ShareStateAmongWindow=No
# 默认输入法状态
# Available Value:
# Inactive Active
DefaultInputMethodState=Inactive

[Output]
# 数字后跟半角符号
# Available Value:
# True False
HalfPuncAfterNumber=True
# 回车键操作
# Available Value:
# Nothing Clean Commit
EnterAction=Nothing
# 联想模式禁用翻页
# Available Value:
# True False
RemindModeDisablePaging=True
# 切换到非激活模式时当前输入的原始文本上屏
# Available Value:
# True False
SendTextWhenSwitchEng=False
# 候选词个数
CandidateWordNumber=5
# 提示词库中词组
# Available Value:
# True False
PhraseTips=False
# 窗口失去焦点时不提交预编辑文本
# Available Value:
# True False
DontCommitPreeditWhenUnfocus=True

[Appearance]
# 切换输入时显示输入条
# Available Value:
# True False
ShowInputWindowAfterTriggering=False
# 显示输入速度
# Available Value:
# True False
ShowInputSpeed=False
# 显示版本
# Available Value:
# True False
ShowVersion=False
# 只有预编辑字符串时不显示输入窗口
# Available Value:
# True False
HideInputWindowWhenOnlyPreeditString=False
# 只有一个候选词时不显示输入窗口（只有预编辑字符串时不显示窗口必须选中）
# Available Value:
# True False
HideInputWindowWhenOnlyOneCandidate=False

